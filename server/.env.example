# JobConnect Backend Environment Variables
# Copy this file to .env and fill in your values
# 
# IMPORTANT: Never commit .env file to version control!
# This file contains sensitive information.

# ============================================
# Node.js Environment
# ============================================
# Options: development, production, test
# - development: enables debug logs, hot reload
# - production: optimized for performance
# - test: used for running tests
NODE_ENV=development

# ============================================
# Server Configuration
# ============================================
# Port on which the server will listen
# Default: 4000
PORT=4000

# ============================================
# Database Configuration
# ============================================
# MongoDB Connection URI
# 
# Local development (without Docker):
#   mongodb://localhost:27017/jobconnect
#
# Docker Compose:
#   mongodb://mongo:27017/jobconnect
#
# MongoDB Atlas (cloud):
#   mongodb+srv://username:password@cluster.mongodb.net/jobconnect
#
# With authentication:
#   mongodb://username:password@host:27017/jobconnect?authSource=admin
MONGO_URI=mongodb://mongo:27017/jobconnect

# ============================================
# Authentication Configuration
# ============================================
# JWT Secret Key
# IMPORTANT: Change this to a strong random string in production!
# 
# Generate a secure secret:
#   Linux/Mac: openssl rand -base64 32
#   Windows:   [System.Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(32))
#
# Minimum recommended length: 32 characters
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT Token Expiration Time
# Format: number + unit
# Examples:
#   - 7d  (7 days)
#   - 24h (24 hours)
#   - 60m (60 minutes)
#   - 30s (30 seconds)
JWT_EXPIRES_IN=7d

# ============================================
# WebSocket Configuration
# ============================================
# WebSocket Port for GraphQL Subscriptions
# Default: 4001
# Note: In production, WebSocket uses the same port as HTTP (4000)
WS_PORT=4001